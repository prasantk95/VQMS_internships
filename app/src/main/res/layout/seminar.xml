<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/back2"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"

        >

        <!--Put form controls here-->

        <TextView
            style="@style/TextViewAppearance.Headline2"

            android:id="@+id/TextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SEMINAR/EVENTS"
            android:textAlignment="center"
            android:layout_marginTop="10dp">

        </TextView>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextName"
                android:layout_height="wrap_content"
                android:hint="@string/nameinvite"
                android:inputType="textPersonName"
                android:layout_width="fill_parent"
                android:layout_marginTop="50dp">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_coll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/EditTextCollege"
                android:layout_height="wrap_content"
                android:hint="College"
                android:inputType="textPostalAddress"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextLocation"
                android:layout_height="wrap_content"
                android:hint="Loc- Address"
                android:inputType="textMultiLine"
                android:lines="2"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextDepartment"
                android:layout_height="wrap_content"
                android:hint="Department"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/EditTextMobile"
                android:layout_height="wrap_content"
                android:hint="@string/mobno"
                android:inputType="phone"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/EditTextEmail"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/EditTextPurpose"
                android:layout_height="wrap_content"
                android:hint="Purpose"
                android:inputType="text"
                android:layout_width="fill_parent">
            </EditText>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/ButtonSend"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_width="fill_parent">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="NOTE: VQMS conducts knowledgeble Seminar/Events over Management Best Practices"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:textColor="#000000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/send"
                android:src="@drawable/go"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:layout_width="400dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="www.vqms.co.in"
                android:id="@+id/webadd"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:textColor="#008bca"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
